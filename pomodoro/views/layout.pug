doctype html
html
  head
    title= title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js") 
    script(src="https://sdk.scdn.co/spotify-player.js") 
    script(src="/javascripts/scripts.js") 
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .container
      .nav.row
        .col.d-flex
          a(href="http://127.0.0.1:3000/", style='text-decoration: none;')
            h1.fw-bold.me-4.mb-0.text-white|PomoClock

          //- Spotify player
          button.btn.nav-icon(type:button, style="width: 130px")
            img#album.nav-icon-img(src='./images/icons/icons8-spotify-30.svg')
            span#playing-name.text-white 音樂
          button.border-0.bg-transparent.ms-4#previous(type:button)
            img.nav-icon-img(src='./images/icons/first.svg')
          button.border-0.bg-transparent#togglePlay(type:button)
            img.nav-icon-img#play(src='./images/icons/icons8-play-button-circled.svg')
          button.border-0.bg-transparent#next(type:button)
            img.nav-icon-img(src='./images/icons/last.svg')

        //- App funcs.
        .col.d-flex.justify-content-end
          a.btn.nav-icon.mx-2(href="")
            img.nav-icon-img(src="./images/icons/icons8-ookla-speedtest-30.svg")
            span.text-white 成就
          a.btn.nav-icon.mx-2(href="")
            img.nav-icon-img(src="./images/icons/friends.svg")
            span.text-white 好友
          a.btn.nav-icon.mx-2(href="")
            img.nav-icon-img(src="./images/icons/user.svg")
            span.text-white 帳號
      
      hr.border-2
      block content